<UserControl x:Class="WPFView.Connect.ConnectUserControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
             xmlns:local="clr-namespace:WPFView.Connect"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ConnectViewModel,IsDesignTimeCreatable=True}">
    <Grid>
        <Border Background="#1e1e1e" Opacity="0.9"/>

        <Border Background="AliceBlue" Padding="70,50,70,50" CornerRadius="20"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel VerticalAlignment="Center">
                <TextBox Height="60" Width="300" Padding="0,5,0,5" FontSize="30"
                         Text="{Binding ConnectVM.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Join" Height="60"
                        Command="{Binding ConnectVM.JoinCommand}"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
