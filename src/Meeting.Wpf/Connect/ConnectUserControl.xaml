<UserControl x:Class="Meeting.WPF.Connect.ConnectUserControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
             xmlns:local="clr-namespace:Meeting.WPF.Connect"
             xmlns:controls="clr-namespace:Meeting.WPF.Controls;assembly=Meeting.WPF.Controls"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:ConnectViewModel,IsDesignTimeCreatable=True}">

    <Grid>
        <Border Background="#1e1e1e" Opacity="0.9"/>

        <Border Background="#1c1f22" Padding="70,50,70,50" CornerRadius="10"
                BorderBrush="#e64444" BorderThickness="0.8" UseLayoutRounding="True"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid>
                <controls:StateTextBox Placeholder="Name" MinWidth="200" MaxWidth="250"
                                       Text="{Binding ConnectVM.Name, UpdateSourceTrigger=PropertyChanged}" 
                                       IsValid="{Binding ConnectVM.IsValidName}"
                                       Command="{Binding ConnectVM.JoinCommand}"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
